# Copy this file to .env and adjust values before running docker compose
# Pass it to compose with: docker compose --env-file pgadmin/.env up -d

# pgAdmin Default Email (used for login)
PGADMIN_DEFAULT_EMAIL=admin@iotserver.uz

# pgAdmin Default Password (IMPORTANT: Change this to a strong password!)
PGADMIN_DEFAULT_PASSWORD=ChangeMe!SecurePassword123

# Host port for accessing pgAdmin web interface
PGADMIN_HOST_PORT=5050

# Server mode (set to False for desktop mode, True for web mode)
PGADMIN_CONFIG_SERVER_MODE=True

# Enhanced cookie security
PGADMIN_CONFIG_ENHANCED_COOKIE_PROTECTION=True

# Master password required for saving server passwords
PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED=True
